{
  "manifest_version": 3,
  "name": "Follow the Sun",
  "version": "1.0",
  "description": "Tracks and logs tab activity in the browser",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "idle"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["canvas-confetti.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
