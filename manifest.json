{
  "manifest_version": 3,
  "name": "Follow the Sun",
  "version": "1.0",
  "description": "Tracks and logs tab activity in the browser",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
